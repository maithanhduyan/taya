<?xml version="1.0"?>

<entity name="Product" >

	<!-- PK fields -->

	<column name="productId" type="long" primary="true" />

	<!-- Audit fields -->

	<column name="companyId" type="long" />
	<column name="userId" type="long" />
	<column name="userName" type="String" />
	<column name="createDate" type="Date" />
	<column name="modifiedDate" type="Date" />

	<!-- Other fields -->

	<column name="name" type="String" />
	<column name="productcategoryid" type="long" />
	<column name="code" type="boolean" />
	<column name="color" type="String" />
	<column name="manufactureDate" type="Date" />
	<column name="productuuid" type="String" />
	<column name="standardcost" type="String" />

	<!-- Order -->

	<order by="asc">
		<order-column name="name" />
	</order>

	<!-- Finder methods -->

	<finder name="FindByName" return-type="Collection">
		<finder-column name="name" />
	</finder>
	
	<finder name="FindByName_Code" return-type="Collection">
		<finder-column name="name" />
		<finder-column name="code" />
	</finder>
	
	<finder name="FindByName_Code_Color" return-type="Collection">
		<finder-column name="name" />
		<finder-column name="code" />
		<finder-column name="color" />
	</finder>
</entity>